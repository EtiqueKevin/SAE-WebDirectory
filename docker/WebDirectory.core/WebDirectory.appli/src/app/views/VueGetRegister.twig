{% extends "Index.twig" %}

{% block content %}
    <div>
        <p class="titre">Création d'un utilisateur</p>
        <form action="/register/" method="post" id="form-register">
            <div><label for="email"></label><input type="email" id="email" name="email" placeholder="email"></div>
            <div><label for="password"></label><input type="password" id="password" name="password" placeholder="Mot de passe"></div>
            <div><label for="password2"></label><input type="password" id="password2" name="password2" placeholder="Vérification du mot de passe"></div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <button  type="submit">Création</button>
        </form>
    </div>
{% endblock %}