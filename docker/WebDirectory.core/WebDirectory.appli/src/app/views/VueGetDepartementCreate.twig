{% extends "Index.twig" %}

{% block auth %}

    {% if connecte %}

        <a href="{{url_for('getRegister', {},{})}}"><p>CREATION UTILISATEUR</p></a>
        <a href="{{url_for('logout', {},{})}}"><p>DECONNEXION</p></a>

    {% else %}

        <a href="{{url_for('getAuth', {},{})}}"><p>CONNEXION</p></a>

    {% endif %}

{% endblock %}


{% block content %}
    <div id="card">
        <h1 class="titre">Création d'un département</h1>
        <form action="/departement/create" method="post" id="form-new-departement">
            <div><label for="nom"></label><input type="text" id="nom" name="nom" placeholder="Nom"></div>
            <div><label for="etage"></label><input type="number" id="etage" name="etage" placeholder="Étage"></div>
            <div><label for="description"></label><textarea id="description" name="description" placeholder="Description"></textarea></div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <br>
            <button  type="submit">Créer</button>
        </form>
    </div>
{% endblock %}